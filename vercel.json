{
  "version": 2,
  "builds": [
    {
      "src": "api/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/app.js"
    },
    {
      "src": "/output.css",
      "dest": "/src/output.css"
    },
    {
      "src": "/pages/(.*)",
      "dest": "/src/pages/$1"
    },
    {
      "src": "/core/(.*)",
      "dest": "/src/core/$1"
    },
    {
      "src": "/features/(.*)",
      "dest": "/src/features/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/src/js/$1"
    },
    {
      "src": "/shared/(.*)",
      "dest": "/src/shared/$1"
    },
    {
      "src": "/",
      "dest": "/src/pages/auth/login.html"
    },
    {
      "src": "/(.*)",
      "dest": "/src/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|mjs)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    }
  ]
}


